<h1>Edit Product</h1>

<form action="/products/<%= @product.id %>" method="post">
<input type="hidden" name="_method" value="patch" />
  <div>
    Name: <input type="text" name="name" value="<%= @product.name %>">
  </div>
  <div>
    Description: <input type="text" name="description" value="<%= @product.description %>">
  </div>
  <div>
    Price: <input type="decimal" name="price" value="<%= @product.price %>">
  </div>
    <div>
    Supplier ID: <input type="number" name="supplier_id" value="<%= @product.supplier_id %>">
  </div>
  <div>
    <input type="submit" value="Create Product">
  </div>

</form>

<a href="/products">All Products</a>