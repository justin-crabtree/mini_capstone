<div class="card-columns">

  <% @products.each do |product| %>

   <div class="card">
     <img src="..." class="card-img-top" alt="...">
     <div class="card-body">
       <h5 class="card-title"><%= product.name %></h5>
       <p class="card-text"><%= product.description %></p>
       <p class="card-text">Price: <%= product.price %></p>
     </div>
   </div>

  <% end %>

</div>



