@products.map do |product|
  {
    id: product.id, 
    name: product.name,
    price: product.price, 
    price_data: {
      price: product.price,
      tax: product.tax, 
      total: product.total
    },  
  is_discounted?: product.is_discounted?, 
  description: product.description
  }


end

